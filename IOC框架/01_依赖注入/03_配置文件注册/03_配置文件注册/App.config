<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="unity" type="Microsoft.Practices.Unity.Configuration.UnityConfigurationSection,
             Microsoft.Practices.Unity.Configuration" />
  </configSections>
  <unity xmlns="http://schemas.microsoft.com/practces/2010/unity">
    <containers>
      <!--XiangziContainer为自定义名称 只需要和调用时名称保持一致即可-->
      <container name="XiangziContainer">
        <!--type为对象的名称,mapTo为注入对象的名称 写法为用逗号隔开两部分，一是类的全部，包括命名空间，二是程序集名称-->
        <register type="_03_配置文件注册.IUserService,03_配置文件注册" mapTo="_03_配置文件注册.UserService,03_配置文件注册">
          <lifetime type="singleton" />
        </register>
        <register type="_03_配置文件注册.IUserDao,03_配置文件注册" mapTo="_03_配置文件注册.UserDao,03_配置文件注册"/>
      </container>
    </containers>
  </unity>
  <!--startup必须放在<configSections>节点下面，否则报错-->
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5.2" />
    </startup>
</configuration>